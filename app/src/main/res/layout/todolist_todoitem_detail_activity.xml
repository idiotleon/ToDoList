<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_title_todoitem_detailactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/detail_header"
        android:gravity="center"
        android:text="Title"
        android:textSize="64sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview_deadline_todoitem_detailactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deadline"
                android:textSize="32sp" />


            <TextView
                android:id="@+id/textview_description_todoitem_detailactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Priority"
                android:textSize="32sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textview_priority_todoitem_detailactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Description" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_dateandtimecreated_todoitem_detailactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Date and Time created"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_edit_detailactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/btn_markascomplete_detailactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as complete" />

        <Button
            android:id="@+id/btn_delete_detailactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />
    </LinearLayout>

</LinearLayout>