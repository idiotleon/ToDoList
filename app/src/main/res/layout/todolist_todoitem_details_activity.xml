<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_title_todoitem_detailactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/detail_header"
        android:gravity="center"
        android:text="Title"
        android:textSize="64sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_deadline_todoitem_detailactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deadline"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textview_description_todoitem_detailactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Priority"
            android:textSize="24sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textview_priority_todoitem_detailactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textview_dateandtimecreated_todoitem_detailactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Date and Time created"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center|bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_edit_detailactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/btn_markascomplete_detailactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as complete" />

        <Button
            android:id="@+id/btn_delete_detailactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete" />
    </LinearLayout>

</LinearLayout>