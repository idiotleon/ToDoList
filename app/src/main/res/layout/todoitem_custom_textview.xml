<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/todolist_row_numbering"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/new_todoitem_notepad"
        android:gravity="center" />

    <TextView
        android:id="@+id/todolist_row_deadline"
        android:layout_width="100sp"
        android:layout_height="60sp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:background="@drawable/new_todoitem_notepad" />

    <TextView
        android:id="@+id/todolist_row_title"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_toLeftOf="@+id/todolist_row_deadline"
        android:layout_toRightOf="@+id/todolist_row_numbering"
        android:background="@drawable/new_todoitem_notepad"
        android:fadingEdge="vertical"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColor="@color/notepad_text" />

</RelativeLayout>